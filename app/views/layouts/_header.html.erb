<header class="navbar navbar-fixed-top ">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav pull-left">
          <li><%= link_to "Home", root_path %></li>
          <% if not signed_in? %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% else %>
              <li id="user-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account
                  <% if unread_messages_count > 0 %>
                  <div class="unread-messages-count" style="display: inline-block;">
                    <%= unread_messages_count %>
                  </div>
                  <% end %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Conversations", user_conversations_path(current_user) %></li>
                  <li><%= link_to "Profile", user_path(@current_user) %></li>
                  <li><%= link_to "Settings", edit_user_path(@current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% end %>

        </ul>
        <ul class="nav pull-right">
          <li><%= link_to "Tags", tags_path %></li>
          <li><%= link_to "Interests", interests_path %></li>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Groups", groups_path %></li>
          <li id="info-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Info <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Help", help_path %></li>
              <li><%= link_to "About", about_path %></li>
            </ul>
          </li>
          <% if signed_in? %>
              <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>